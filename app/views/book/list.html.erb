<% if @books.blank? %>
	<p>There are no book currently in the system</p>
<% else%>
	<p>These are the current books in our system</p>

	<ul id="books">
		<% @books.each do |b|%>
			<li><%= link_to b.title, {:action => 'show' , :id => b.id} %></li>
		<% end -%>
	</ul>
<% end %>
<%= link_to "Add New Book", {:action => 'new'} %>